rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Funções auxiliares
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    function isAdmin() {
       return request.auth != null && get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.role in ['admin', 'superadmin'];
    }

    // Regra global de bloqueio por defeito
    match /{document=**} {
      allow read, write: if false; 
    }

    // ADMINS
    match /admins/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow write: if isAdmin(); // Apenas admins podem criar outros admins
    }

    // PROFISSIONAIS (Perfil público para leitura, escrita por owner/admin)
    match /professionals/{userId} {
      allow read: if true; // Perfil é público
      allow write: if isOwner(userId) || isAdmin();

      // SERVIÇOS
      match /services/{serviceId} {
        allow read: if true;
        allow write: if isOwner(userId) || isAdmin();
      }
      
      // MARCAÇÕES (BOOKINGS) - Raiz do profissional
      match /bookings/{bookingId} {
        allow create: if true; // Clientes criam marcações
        allow read: if true; // Permite ler para calcular slots ocupados
        allow update, delete: if isOwner(userId) || isAdmin();
      }

      // STAFF E SUAS SUB-COLEÇÕES
      match /staff/{staffId} {
        allow read: if true;
        // Permitir escrita se for o DONO ou se for o PRÓPRIO funcionário (verificado pelo authUserId no doc)
        allow write: if isOwner(userId) || isAdmin() || (resource.data.authUserId == request.auth.uid) || (request.resource.data.authUserId == request.auth.uid);

        // Configurações do Staff (Horários)
        match /settings/{docId} {
             allow read: if true;
             allow write: if isOwner(userId) || isAdmin() || get(/databases/$(database)/documents/professionals/$(userId)/staff/$(staffId)).data.authUserId == request.auth.uid;
        }

        // MARCAÇÕES DO STAFF
        match /bookings/{bookingId} {
            allow create: if true;
            allow read: if true; 
            allow update, delete: if isOwner(userId) || isAdmin() || get(/databases/$(database)/documents/professionals/$(userId)/staff/$(staffId)).data.authUserId == request.auth.uid;
        }
      }
      
       // SETTINGS GERAIS (Horários do estabelecimento)
      match /settings/{document=**} {
         allow read: if true;
         allow write: if isOwner(userId) || isAdmin();
      }
    }
    
    // CLIENTES (Opcional, se usares autenticação de clientes no futuro)
    match /clients/{clientId} {
        allow create: if true;
        allow read, update: if request.auth != null && request.auth.uid == clientId;
    }

    // STAFF LOOKUP - Mapeamento para login de funcionários
    match /staff_lookup/{authUid} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.ownerId == request.auth.uid;
      allow update, delete: if request.auth != null && resource.data.ownerId == request.auth.uid;
    }
  }
}
